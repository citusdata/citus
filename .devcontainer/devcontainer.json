{
    "image": "citus/devcontainer:dev-20220509",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
    ],
    "forwardPorts": [9700],
    "extensions": [
        "ms-vscode.cpptools",
        "ms-vsliveshare.vsliveshare",
    ],
    "mounts": [
        "type=volume,target=/data",
    ],
    "updateContentCommand": "./configure",
    "postCreateCommand": "make -C .devcontainer/",
}
