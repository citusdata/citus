        FOREIGN DATA WRAPPER postgres_fdw
        OPTIONS (host 'test');
CREATE FOREIGN TABLE foreign_table (
        id integer NOT NULL,
        data text
)
        SERVER foreign_server_dependent_schema
        OPTIONS (schema_name 'test_dependent_schema', table_name 'foreign_table_test');
