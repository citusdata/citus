UPDATE pg_dist_node SET nodeport = 0 WHERE nodeid = :worker_1_nodeid;
SELECT nodeid = :worker_1_nodeid AS "Is Worker 1", success, result FROM run_command_on_all_nodes('SELECT 1') ORDER BY 1;
