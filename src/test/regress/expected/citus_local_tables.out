  BEGIN
      UPDATE citus_local_table_3 SET value=value+1;
      RETURN NEW;
  END;
  $update_value$ LANGUAGE plpgsql;
  CREATE TRIGGER insert_trigger
  AFTER INSERT ON citus_local_table_3
