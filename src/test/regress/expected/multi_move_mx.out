-- Check that the first two tables are colocated
SELECT
	logicalrelid, repmodel
FROM
	pg_dist_partition
WHERE
	logicalrelid = 'mx_table_1'::regclass
	OR logicalrelid = 'mx_table_2'::regclass
	OR logicalrelid = 'mx_table_3'::regclass
ORDER BY
	logicalrelid;
 logicalrelid | repmodel
---------------------------------------------------------------------
 mx_table_1   | s
 mx_table_2   | s
 mx_table_3   | s
